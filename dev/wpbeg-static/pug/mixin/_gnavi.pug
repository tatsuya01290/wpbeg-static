mixin gnavi(now)
	//- [ [ pageURL, linkURL, linkTitle ] ]
	- var list = [ [ "index.html", "/", "Blog" ], [ "page.html", "/page.html", "About" ] ]
	nav.p-gnavi
		ul.p-gnavi__menu
			each page in list
				if page[0] === now
					li.p-gnavi__menu__item: a.is-active( href=page[1] ) #{page[2]}
				else
					li.p-gnavi__menu__item: a( href=page[1] ) #{page[2]}
